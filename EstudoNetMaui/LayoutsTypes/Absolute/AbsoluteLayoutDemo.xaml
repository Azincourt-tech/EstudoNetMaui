<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EstudoNetMaui.LayoutsTypes.Absolute.AbsoluteLayoutDemo"
             Title="Absolute Layout Demo">

    <AbsoluteLayout>
        <!--Eixo X-->
        <BoxView 
            Color="Red"
            AbsoluteLayout.LayoutBounds="100,50,150,200" />

        <BoxView
            Color="Blue"
            AbsoluteLayout.LayoutBounds="0,50,30,30"
            AbsoluteLayout.LayoutFlags="XProportional" />

        <BoxView
            Color="Green"
            AbsoluteLayout.LayoutBounds="0.6,100,30,30"
            AbsoluteLayout.LayoutFlags="XProportional" />

        <BoxView
            Color="Yellow"
            AbsoluteLayout.LayoutBounds="1,150,30,30"
            AbsoluteLayout.LayoutFlags="XProportional" />


        <!--Eixo Y-->
        <BoxView
            Color="Purple"
            AbsoluteLayout.LayoutBounds="10,0,30,30" 
            AbsoluteLayout.LayoutFlags="YProportional"/>

        <BoxView
            Color="Orange"
            AbsoluteLayout.LayoutBounds="60,0.5,30,30" 
            AbsoluteLayout.LayoutFlags="YProportional"/>

        <BoxView
            Color="Pink"
            AbsoluteLayout.LayoutBounds="110,1,30,30" 
            AbsoluteLayout.LayoutFlags="YProportional"/>
    </AbsoluteLayout>
</ContentPage>