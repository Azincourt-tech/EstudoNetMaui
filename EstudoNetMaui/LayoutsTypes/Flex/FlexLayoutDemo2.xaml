<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EstudoNetMaui.LayoutsTypes.FlexLayoutDemo2"
             Title="FlexLayoutDemo2">
    
    <FlexLayout Direction="Column">
        <!--Header-->
        <Label 
            Text="Cabeçalho"
            FontSize="Large"
            BackgroundColor="Red"
            HorizontalTextAlignment="Center"/>

        <!--Body-->
        <FlexLayout FlexLayout.Grow="1">
            <Label 
                Text="Corpo do Layout"
                BackgroundColor="Gray"
                FontSize="Large"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                FlexLayout.Grow="1"/>

            <!--Side Items-->
            <BoxView
                FlexLayout.Basis="50"
                FlexLayout.Order="-1"
                Color="Blue"/>

            <BoxView
                FlexLayout.Basis="50"
                Color="Green"/>
        </FlexLayout>

        <!--Footer-->
        <Label 
            Text="Rodapé"
            FontSize="Large"
            BackgroundColor="Gold"
            HorizontalTextAlignment="Center"/>
    </FlexLayout>
    
</ContentPage>