<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:EstudoNetMaui.Models"
             x:Class="EstudoNetMaui.Databinding.DatabindingDemo"
             Title="DatabindingDemo">

    <ContentPage.BindingContext>
        <models:Produto 
                    x:Name="produto" 
                    Nome="Iphone 10" 
                    Preco="5000" 
                    Estoque="5" />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout>
            <Label Text="{Binding Source={x:Reference produto}, 
               Path=Nome}"
               FontSize="40"/>
            
            <Label Text="{Binding Source={x:Reference produto}, 
               Path=Preco, 
               StringFormat='R$ {0:F2}'}" 
               FontSize="40"/>

            <Label Text="{Binding Source={x:Reference produto}, 
               Path=Estoque, 
               StringFormat='Quantidade: {0}'}" 
               FontSize="40"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>