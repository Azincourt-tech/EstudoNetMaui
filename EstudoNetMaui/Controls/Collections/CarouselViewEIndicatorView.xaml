<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EstudoNetMaui.Controls.Collections.CarouselViewEIndicatorView"
             Title="CarouselView E IndicatorView">

    <ScrollView>
        <VerticalStackLayout>
            <!--CarrousselView + IndicatorView-->
            <StackLayout Padding="20">
                <Label 
                    Text="Carroussel de Imagens:"
                    FontSize="Medium"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>

                <!--CarrousselView-->
                <CarouselView 
                    x:Name="carouselImages"
                    ItemsSource="{Binding Fotos}"
                    IndicatorView="indicatorImages"
                    CurrentItemChanged="carouselImages_CurrentItemChanged">

                    <CarouselView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical"/>
                    </CarouselView.ItemsLayout>

                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Border 
                                StrokeThickness="2" 
                                StrokeShape="RoundRectangle 20,20,20,20"
                                Stroke="Gray">

                                <StackLayout Margin="10">
                                    <Image 
                                        Source="{Binding ImagemUrl}" 
                                        Aspect="AspectFill" 
                                        HeightRequest="160" 
                                        WidthRequest="300"/>

                                    <Label 
                                        Text="{Binding Nome}" 
                                        FontSize="Small" 
                                        HorizontalOptions="Center"/>
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <!--IndicatorView-->
                <IndicatorView 
                    x:Name="indicatorImages"
                    IndicatorColor="LightGray"
                    IndicatorSize="20"
                    SelectedIndicatorColor="Red"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="0,10,0,0"/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>