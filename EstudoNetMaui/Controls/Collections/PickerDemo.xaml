<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EstudoNetMaui.Controls.Collections.PickerDemo"
             Title="PickerDemo">

    <!--Picker-->
    <VerticalStackLayout Padding="20">
        <Label 
            Text="Selecione uma opção:"
            FontSize="Medium"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>
        <Picker 
            x:Name="pickerOptions"
            Title="Escolha uma opção"
            SelectedIndexChanged="pickerOptions_SelectedIndexChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Opção 1</x:String>
                    <x:String>Opção 2</x:String>
                    <x:String>Opção 3</x:String>
                    <x:String>Opção 4</x:String>
                    <x:String>Opção 5</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Label
            x:Name="lblPickerResult"
            Text=""
            FontSize="Small"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>

        <Label 
            Text="{Binding Source={x:Reference pickerOptions},
            Path=SelectedIndex}" 
            VerticalOptions="Center"
            HorizontalOptions="Center"/>
    </VerticalStackLayout>

</ContentPage>