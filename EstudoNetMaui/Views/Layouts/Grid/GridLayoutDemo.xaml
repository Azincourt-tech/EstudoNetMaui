<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EstudoNetMaui.GridLayoutDemo"
             Title="Grid Layout Demo">

    <Grid 
        RowDefinitions="*,*,100"
        ColumnDefinitions="*,2*,100"
        ColumnSpacing="20" 
        RowSpacing="20" 
        Padding="10">

        <Label Text="Linha 1" BackgroundColor="Gold" 
               Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"/>
        
        <Label Text="Linha 2" BackgroundColor="Red" 
               Grid.Row="0" Grid.Column="1" />

        <Label Text="Linha 3" BackgroundColor="Blue" 
               Grid.Row="0" Grid.Column="2" />


        <Label Text="Linha 5" BackgroundColor="Pink"
                Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>


        <Label Text="Linha 7" BackgroundColor="Purple"
                Grid.Row="2" Grid.Column="0" />

        <Label Text="Linha 8" BackgroundColor="Gray"
                Grid.Row="2" Grid.Column="1" />

        <Label Text="Linha 9" BackgroundColor="Brown"
                Grid.Row="2" Grid.Column="2" />

    </Grid>
</ContentPage>
