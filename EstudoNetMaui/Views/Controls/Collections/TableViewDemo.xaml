<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EstudoNetMaui.Views.Controls.Collections.TableViewDemo"
             Title="TableViewDemo">

    <!--TableView Deprecated-->
    <!--Intent Menu-->
    <TableView Intent="Menu">
        <TableRoot>
            <TableSection Title="Acessorios">
                <SwitchCell 
                    Text="Item 1" 
                    On="True"/>
                <SwitchCell 
                    x:Name="AlertaCinto"
                    OnChanged="AlertaCinto_OnChanged"
                    Text="Cinto de Segurança"/>
                <SwitchCell 
                     Text="Item 2"/>
            </TableSection>
            <TableSection Title="Seção 2">
                <TextCell 
                    Text="Item 3" 
                    Detail="Detalhe do Item 3"/>
                <EntryCell 
                    Placeholder="Item 4" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>
